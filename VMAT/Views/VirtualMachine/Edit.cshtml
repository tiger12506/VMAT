@model VMAT.ViewModels.VirtualMachineFormViewModel

@{
    ViewBag.Title = "Edit Machine";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/forms.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <ol>
            <li>
                @Html.LabelFor(model => model.MachineNameSuffix)
                @Html.EditorFor(model => model.MachineNameSuffix)
                @Html.ValidationMessageFor(model => model.MachineNameSuffix)
            </li>

            <li>
                @Html.LabelFor(model => model.ProjectName)
                @Html.DropDownList("ProjectName")
                <input type="text" name="project-add-field" class="project-add-field" />
                <button type="button" class="project-add">Add</button>
                @Html.ValidationMessageFor(model => model.ProjectName)
            </li>

            <li>
                @Html.LabelFor(model => model.IP)
                @Html.EditorFor(model => model.IP)
                @Html.ValidationMessageFor(model => model.IP)
            </li>

            <li>
                @Html.LabelFor(model => model.Lifecycle)
                @Html.RadioButtonFor(model => model.Lifecycle, VMAT.Models.VMLifecycle.Idle) Manual <br />
                @Html.RadioButtonFor(model => model.Lifecycle, VMAT.Models.VMLifecycle.Active) Auto <br />
            </li>
        </ol>
    </fieldset>
    
    <fieldset name="preview" id="preview">
        <legend>Preview</legend>
        <table>
            <tr>
                <th>Project</th>
                <th>Hostname</th>
                <th>Machine Name</th>
                <th>IP Address</th>
            </tr>
            <tr>
                <td class="pProject">
                    <output name="projectnumber" for="project-menu">Gxxxx</output>
                </td>
                <td class="pHostname">
                    <output name="hostname">example.com</output>
                </td>
                <td class="pMachinename">
                    <output name="machinename" for="project-menu machine-suffix">gapdevxxxxyyyyy</output>
                </td>
                <td class="pIP">
                    <output name="ip" for="ip">127.0.0.1</output>
                </td>
            </tr>
        </table>
    </fieldset>
    
    <input type="submit" value="Update" />
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}
