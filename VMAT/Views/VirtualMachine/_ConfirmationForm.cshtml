<div id="confirmation-form" class="popup-content-panel">
    @using (Html.BeginForm())
    {
        <ul>
            <li>
                <button type="button" class="confirm">
                    <img src="@Url.Content("~/Content/themes/images/icon_server-admin.png")" alt="+" />
                    OK
                </button>
            </li>
            <li>
                <button type="button" class="deny">
                    <img src="@Url.Content("~/Content/themes/images/icon_project-complete.png")" alt="X" />
                    Cancel
                </button>
            </li>
        </ul>
    }
</div>
