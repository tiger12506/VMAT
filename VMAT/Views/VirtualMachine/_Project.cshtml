@model VMAT.ViewModels.ProjectViewModel

<div class="project" id="@Model.ProjectName">
    <div class="project-header">
        <button type="button" class="project-collapse">v</button>
        <h2>@Model.ProjectName</h2>
        <h3>@*@Model.Hostname*@</h3>
        <button type="button" class="project-close">
            <img src="@Url.Content("~/Content/themes/images/icon_project-complete.png")" alt="X" />
            Close
        </button>
    </div>

    <ul class="machine-list">
        @foreach (var vm in Model.RegisteredVMs)
        {
            <li class="registered-vm">
                @Html.Partial("_RegisteredVirtualMachine", vm)
            </li>
        }

        @foreach (var vm in Model.PendingArchiveVMs)
        {
            <li class="pending-archive-vm">
                @Html.Partial("_PendingArchiveVirtualMachine", vm)
            </li>
        }

        @foreach (var vm in Model.PendingVMs)
        {
            <li class="pending-vm">
                @Html.Partial("_PendingVirtualMachine", vm)
            </li>
        }

        @foreach (var vm in Model.ArchivedVMs)
        {
            <li class="archived-vm">
                @Html.Partial("_ArchivedVirtualMachine", vm)
            </li>
        }
    </ul>
</div>
