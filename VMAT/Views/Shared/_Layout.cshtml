<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title - VMAT</title>
	<link rel="icon" type="image/png" href="@Url.Content("~/Content/themes/images/favicon.png")" />
	<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

	<!--[if IE]>
	<link href="@Url.Content("~/Content/IE.css")" rel="stylesheet" type="text/css" />
	<![endif]-->

	<!--[if IE 9]>
	<link href="@Url.Content("~/Content/IE9.css")" rel="stylesheet" type="text/css" />
	<![endif]-->

	<!--[if lt IE 8]>
	<link href="@Url.Content("~/Content/IE7.css")" rel="stylesheet" type="text/css" />
	<![endif]-->

	<script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/modernizr-2.0.6-development-only.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/AjaxLogin.js")" type="text/javascript"></script>
	<script type="text/javascript" src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")"></script>
	
	<script type="text/javascript">
		// Setup URL Lookup Table for dynamic routing
		var urlTable = new Array();

		$.url = function (url) {
			return urlTable[url];
		}
	</script>
</head>
<body>
	<div id="page">
		<div id="header">
			<div id="banner">
				<a href="@Url.Action("Index", "Home")" id="logo">VMAT</a>
				<div id="login">
					@Html.Partial("_LogOnPartial")
				</div>
			</div>
			<div id="page-title">
				<h1>@ViewBag.Title</h1>
			</div>
		</div>
		<div id="content">
			@RenderBody()
		</div>
		<div id="footer">
			<ul>
				<li>@Html.ActionLink("Servers", "Index", "VirtualMachine")</li>
				<li>@Html.ActionLink("Create", "Create", "VirtualMachine")</li>
				<li>@Html.ActionLink("Admin", "Host", "Configuration")</li>
				<li>@Html.ActionLink("Help", "Help", "Home")</li>
				<li>@Html.ActionLink("About", "About", "Home")</li>
			</ul>
		</div>
	</div>
</body>
</html>
